    const response = await fetch(`http://localhost:8080/api/v1/divisions/code/${divisionCodeOrId}`);
    console.log('üì° R√©ponse API status:', response.status);
    
    if (response.ok) {
      const division = await response.json();
      console.log('üìã Donn√©es division re√ßues:', division);
      return division.nom || divisionCodeOrId;
    } else {
      console.warn('‚ö†Ô∏è API division √©chec, status:', response.status);
    }
  } catch (error) {
    console.error('‚ùå Erreur lors de la r√©cup√©ration du nom de division:', error);
  }
